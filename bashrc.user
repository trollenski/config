# ~/.bashrc

# Invite de commande pour l'utilisateur
GREEN='\[\033[0;32m\]'
WHITE='\[\033[1;37m\]'
NC='\[\033[0;m\]'
PS1="$GREEN[$WHITE\u$NC@$WHITE\h$NC:$WHITE\W$GREEN] \$ $NC"

# Définition des alias
alias ls='ls --color=auto'
alias ll='ls -al'
alias ..='cd ..'
alias ...='cd ../..'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias vi='vim'

# Vim est notre éditeur de texte préféré
EDITOR=vim
VISUAL=$EDITOR
export EDITOR VISUAL

